#!/usr/bin/env bash

function delay() {
	for ((i=3; i > 0; i--)); do
		echo "${i}..."
		sleep 1
	done
}

function printHelp() {
	echo "Simple shutdown menu for i3 window manager"
	echo
	echo "Dependencies:"
	echo "    i3-wm,"
	echo "    i3lock, and imagemagick -- lock screen"
	echo "    another compmgr, and transset-df -- transparency"
	echo
	echo "Using with another terminal"
	echo "    xterm -e ~/i3shutdown"
	echo "    bindsym \$mod+i exec xterm -e ~/i3shutdown"
	echo
	echo "Keys:"
	echo "    -h --help    print this menu"
	echo
	echo "kalterfive"
}


#	{{{ Actions

function Error() {
	echo ">>= ERROR"
	sleep 1
}

function Cancel() {
	echo ">>= CANCEL"
	sleep 1
}

function Exit_wm() {
	echo ">>= EXIT WM"
	delay

	i3-msg "exit"
}

function Reboot() {
	echo ">>= REBOOT"
	delay

	reboot
}

function Shutdown() {
	echo ">>= SHUTDOWN"
	delay

	poweroff
}

function Lock() {
	echo ">>= LOCK"
	delay

	import -window root /tmp/lock.png
	mogrify -scale 10% -scale 1000% -blur 2 /tmp/lock.png
	nohup i3lock -i /tmp/lock.png >& /dev/null
}

function Suspend() {
	echo ">>= SUSPEND"
	delay

	sudo pm-suspend
}

#	}}}


case "$1" in
	"-h" | "--help")
		printHelp
		exit
	;;
esac

i3-msg "floating enable" > /dev/null
i3-msg "border none" > /dev/null
transset-df 0.85 -a > /dev/null

Cancel="C"
Exit_wm="E"
Reboot="R"
Shutdown="H"
Lock="L"
Suspend="S"

printf "[%s]: CANCEL\n"   "$Cancel"
printf "[%s]: EXIT WM\n"  "$Exit_wm"
printf "[%s]: REBOOT\n"   "$Reboot"
printf "[%s]: SHUTDOWN\n" "$Shutdown"
printf "[%s]: LOCK\n"     "$Lock"
printf "[%s]: SUSPEND\n"  "$Suspend"
echo

printf "Action: "
read action

case "$action" in
	["$Cancel"]  ) Cancel   ;;
	["$Exit_wm"] ) Exit_wm  ;;
	["$Reboot"]  ) Reboot   ;;
	["$Shutdown"]) Shutdown ;;
	["$Lock"]    ) Lock     ;;
	["$Suspend"] ) Suspend  ;;
esac

clear
exit
