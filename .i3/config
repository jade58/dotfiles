##
## i3 config
##


##
## variables
##

# mod-key
set $alt Mod1
set $super Mod4

# terminal
set $term uxterm


##
## autostart
##

# set background image
exec feh --bg-fill ~/Pictures/wall/10.jpg

# x-composition
# exec xcompmgr

# switch keyboard
exec setxkbmap "us,ru" ",winkeys" "grp:caps_toggle"

# x-resources
exec xrdb -merge .Xresources


##
## configuration
##

# hide title
new_window pixel 2

# font for window titles
font pango:DejaVu Mono 8


##
## keys
##

floating_modifier $super

# screenshooter
bindsym Print exec scrot '%Y%m%d%H%M%S.png' -e 'mv $f ~/Pictures/scr/'

# start a terminal
bindsym $super+Return exec $term
bindsym $super+t exec $term
 
# start dmenu (a program launcher)
bindsym $super+d exec ~/.i3/dmenu.sh


##
## tiles
##

# kill focused window
bindsym $alt+q kill

# focus tile
bindsym $super+h focus left
bindsym $super+j focus down
bindsym $super+k focus up
bindsym $super+l focus right
 
# move focused window
bindsym $alt+h move left
bindsym $alt+k move up
bindsym $alt+j move down
bindsym $alt+l move right
 
# split in horizontal orientation
bindsym $super+g split h
 
# split in vertical orientation
bindsym $super+v split v
 
# enter fullscreen mode for the focused container
bindsym $super+f fullscreen toggle
 
# change container layout (stacked, tabbed, toggle split)
bindsym $super+s layout stacking
bindsym $super+w layout tabbed
bindsym $super+e layout toggle split
 
# toggle tiling / floating
bindsym $alt+space floating toggle
 
# change focus between tiling / floating windows
bindsym $super+space focus mode_toggle
 
# focus the parent container
bindsym $super+a focus parent


##
## power control buttons
##

# reload the configuration file
bindsym $alt+c reload
 
# restart i3 inplace
bindsym $alt+r restart

# lock screen
bindsym $alt+p exec ~/.i3/lock.sh

# power off
bindsym $alt+o exec poweroff

# exit in i3 # не работает
# bindsym $alt+e exit


##
## workspaces
##

# switch to workspace
bindsym $super+1 workspace 1
bindsym $super+2 workspace 2
bindsym $super+3 workspace 3
bindsym $super+4 workspace 4
bindsym $super+5 workspace 5
bindsym $super+6 workspace 6
bindsym $super+7 workspace 7
bindsym $super+8 workspace 8
bindsym $super+9 workspace 9
 
# move focused container to workspace
bindsym $alt+1 move container to workspace 1
bindsym $alt+2 move container to workspace 2
bindsym $alt+3 move container to workspace 3
bindsym $alt+4 move container to workspace 4
bindsym $alt+5 move container to workspace 5
bindsym $alt+6 move container to workspace 6
bindsym $alt+7 move container to workspace 7
bindsym $alt+8 move container to workspace 8
bindsym $alt+9 move container to workspace 9


##
## resize
##

bindsym $super+r mode "resize"

mode "resize" {
	bindsym H resize shrink width 10 px or 10 ppt
	bindsym K resize grow height 10 px or 10 ppt
	bindsym J resize shrink height 10 px or 10 ppt
	bindsym L resize grow width 10 px or 10 ppt
 
	# back to normal
	bindsym Return mode "default"
	bindsym Escape mode "default"
} 
 

##
## bar
##

bar {
#	font				Xft:Terminus Re33 Regular 13
	status_command		~/.i3/bar.sh
	workspace_buttons 	yes
 
	colors {
		background	#0e0e0e
		statusline	#999999

		focused_workspace	#cccccc #444444 #cccccc
		active_workspace	#cccccc #444444 
		inactive_workspace	#cccccc #0e0e0e 
		urgent_workspace	#cccccc #D15452  
	}
}
